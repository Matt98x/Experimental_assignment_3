<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot_xacro">
<xacro:include filename="$(find exp_assignment3)/urdf/Pet/robot.gazebo"/>
					
	<xacro:property name="length_wheel" value="0.05" />
	<xacro:property name="radius_wheel" value="0.10" />

	<xacro:macro name="default_inertial" params="mass">
               <inertial>
                       <mass value="${mass}" />
                       <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
                       <inertia ixx="0.000526666666667" ixy="0" ixz="0" iyy="0.000526666666667" iyz="0" izz="0.001"/>
               </inertial>
	</xacro:macro>

    <xacro:macro name="wheel_geometry">
		<geometry>
       			<cylinder length="${length_wheel}" radius="${radius_wheel}"/>
     	</geometry>
	</xacro:macro>
	
	
  <material name="black">
    <color rgba="0.0 0.0 0.0 1.0"/>
  </material>
  <material name="blue">
    <color rgba="0.203125 0.23828125 0.28515625 1.0"/>
  </material>
  <material name="green">
    <color rgba="0.0 0.8 0.0 1.0"/>
  </material>
  <material name="grey">
    <color rgba="0.2 0.2 0.2 1.0"/>
  </material>
  <material name="orange">
    <color rgba="1.0 0.423529411765 0.0392156862745 1.0"/>
  </material>
  <material name="brown">
    <color rgba="0.870588235294 0.811764705882 0.764705882353 1.0"/>
  </material>
  <material name="red">
    <color rgba="0.80078125 0.12890625 0.1328125 1.0"/>
  </material>
  <material name="white">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>
    

    <link name="link_chassis">
    <!-- pose and inertial -->
    <pose>0 0 0.1 0 0 0</pose>
    <inertial>
      <mass value="10"/>
      <origin rpy="0 0 0" xyz="0 0 0.1"/>
      <inertia ixx="0.0395416666667" ixy="0" ixz="0" iyy="0.106208333333" iyz="0" izz="0.106208333333"/>
    </inertial>
    <!-- body -->
    <collision name="collision_chassis">
      <geometry>
        <box size="0.4 0.4 0.4"/>
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.3 0.3 0.3"/>
      </geometry>
      <material name="blue"/>
    </visual>
   <!-- arm left -->
    <collision name="arm_left_collision">
      <origin rpy=" 0 0 0" xyz="0.1 -0.20 0.05"/>
      <geometry>
        <box size="0.2 0.05 0.05"/>
      </geometry>
    </collision>
    <visual name="arm_left_visual">
      <origin rpy=" 0 0 0" xyz="0.1 -0.20 0.05"/>
      <geometry>
        <box size="0.2 0.05 0.05"/>
      </geometry>
    </visual>
   <!-- arm right -->
    <collision name="arm_right_collision">
      <origin rpy=" 0 0 0" xyz="0.1 0.20 0.05"/>
      <geometry>
        <box size="0.2 0.05 0.05"/>
      </geometry>
    </collision>
    <visual name="arm_right_visual">
      <origin rpy=" 0 0 0" xyz="0.1 0.20 0.05"/>
      <geometry>
        <box size="0.2 0.05 0.05"/>
      </geometry>
    </visual>
  </link>

   


<!-- castor wheels -->

 <link name="link_castor_axis">
    <!-- pose and inertial -->
    <pose>0 0 0.1 0 0 0</pose>
    <xacro:default_inertial mass="2" />
    <!-- body -->
    <collision name="collision_chassis">
      <origin rpy="0 0 0" xyz="0.025 0 0"/>
      <geometry>
        <box size="0.05 0.035 0.03"/>
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="-0.025 0 0"/>
      <geometry>
        <box size="0.05 0.035 0.03"/>
      </geometry>
    </visual>
  </link>

  <link name="link_castor_wheel">
    <xacro:default_inertial mass="0.8"/>
    <collision name="link_castor_wheel_collision">
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.02" radius="0.03"/>
      </geometry>
    </collision>
    <visual name="link_castor_wheel_visual">
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.02" radius="0.03"/>
      </geometry>
    </visual>
  </link>

  <joint name="joint_castor_wheel" type="continuous">
    <origin rpy="0 0 0" xyz="0.05 0 -0.015"/>
    <child link="link_castor_wheel"/>
    <parent link="link_castor_axis"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>

  <joint name="joint_castor_axis" type="continuous">
    <origin rpy="0 0 0" xyz="0.1 0 -0.20"/>
    <child link="link_castor_axis"/>
    <parent link="link_chassis"/>
    <axis rpy="0 0 0" xyz="0 0 1"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>

 <!-- Main wheels -->
  <joint name="joint_right_wheel" type="continuous">
    <origin rpy="0 0 0" xyz="-0.1 0.175 -0.14"/>
    <child link="link_right_wheel"/>
    <parent link="link_chassis"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>
  
  
  <joint name="joint_left_wheel" type="continuous">
    <origin rpy="0 0 0" xyz="-0.1 -0.175 -0.14"/>
    <child link="link_left_wheel"/>
    <parent link="link_chassis"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>
  
  <link name="link_right_wheel">
    <xacro:default_inertial mass="0.2"/>
    <collision name="link_right_wheel_collision">
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
      <xacro:wheel_geometry />
    </collision>
    <visual name="link_right_wheel_visual">
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
      <xacro:wheel_geometry />
      <material name="red"/>
    </visual>
  </link>

   <link name="link_left_wheel">
    <xacro:default_inertial mass="0.2"/>
    <collision name="link_left_wheel_collision">
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
      <xacro:wheel_geometry />
    </collision>
    <visual name="link_left_wheel_visual">
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
      <xacro:wheel_geometry />
      <material name="red"/>
    </visual>
  </link>

<!-- Neck and head -->

  <link name="neck_link">
	    <collision>
	      <origin xyz="0 0 0.10" rpy="0 0 0"/>
	      <geometry>
		<box size="0.10 0.10 0.20"/>
	      </geometry>
	    </collision>
	    <visual>
	      <origin xyz="0 0 0.10" rpy="0 0 0"/>
	      <geometry>
		<box size="0.10 0.10 0.20"/>
	      </geometry>
	      <material name="red"/>
	    </visual>
	    <inertial>
	      <mass value="2" />
	      <origin xyz="0 0 0" rpy="0 0 0"/>
	      <inertia ixx="1e-4" ixy="0" ixz="0" iyy="1e-4" iyz="0" izz="1e-5" />
	    </inertial> 
  </link>
  
  <joint name="neck_joint" type="fixed">
	    <axis xyz="0 0 1" />
	    <origin xyz="0 0 0.0" rpy="0 0 0"/>
	    <parent link="link_chassis"/>
	    <child link="neck_link"/> 
	 </joint>

  <link name="camera_link">
	    <collision>
	      <origin xyz="-0.2 0 0.05" rpy="0 0 0"/>
	      <geometry>
		<box size="0.10 0.20 0.1"/>
	      </geometry>
	    </collision>
	    <visual>
	      <origin xyz="-0.2 0 0.05" rpy="0 0 0"/>
	      <geometry>
		<box size="0.20 0.25 0.1"/>
	      </geometry>
	      <material name="green"/>
	    </visual>
	    <inertial>
	      <mass value="1e-5" />
	      <origin xyz="0 0 0" rpy="0 0 0"/>
	      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1" iyz="0" izz="1e-6" />
	    </inertial> 
  </link>
  
  <joint name="camera_joint" type="fixed">
	    <axis xyz="1 0 0" />
	    <origin xyz="0.25 0 0.185" rpy="0 0 0"/>
	    <parent link="neck_link"/>
	    <child link="camera_link"/> 
   </joint>

   <!-- Hokuyo sensor -->

   <link name="hokuyo_link">
	    <collision>
	      <origin xyz="0 0 0.025" rpy="0 0 0"/>
	      <geometry>
		<box size="0.05 0.05 0.05"/>
	      </geometry>
	    </collision>
	    <visual>
	      <origin xyz="0 0 0.025" rpy="0 0 0"/>
	      <geometry>
		<box size="0.05 0.05 0.05"/>
	      </geometry>
	      <material name="red">
		<color rgba="1 0 0 1"/>
	      </material>
	    </visual>
	    <inertial>
	      <mass value="1e-5" />
	      <origin xyz="0 0 0" rpy="0 0 0"/>
	      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
	    </inertial> 
  </link>
  
  <joint name="hokuyo_joint" type="fixed">
	    <axis xyz="0 1 0" />
	    <origin xyz="0.15 0 0.10" rpy="0 0 0"/>
	    <parent link="link_chassis"/>
	    <child link="hokuyo_link"/> 
  </joint>

</robot>
